<UserControl x:Class="FlightInspectionDesktopApp.Player.Player"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightInspectionDesktopApp.Player"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal"  Height="100">
        <Button x:Name="x2Back">
            <Image Source="ButtonPics/x2Back.png"/>
        </Button>
        <Button x:Name="Reverse">
            <Image Source="ButtonPics/reverse.png"/>
        </Button>
        <Button x:Name="Pause">
            <Image Source="ButtonPics/pause.png"/>
        </Button>
        <Button x:Name="Stop">
            <Image Source="ButtonPics/Stop.png"/>
        </Button>
        <Button x:Name="Play">
            <Image Source="ButtonPics/play.png"/>
        </Button>
        <Button x:Name="x2Forward">
            <Image Source="ButtonPics/x2Forward.png"/>
        </Button>
    </StackPanel>
</UserControl>
