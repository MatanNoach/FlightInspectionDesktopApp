<UserControl x:Class="FlightInspectionDesktopApp.UserControls.Steering"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightInspectionDesktopApp.UserControls" xmlns:steering="clr-namespace:FlightInspectionDesktopApp.Steering" d:DataContext="{d:DesignInstance Type=steering:SteeringViewModel}"
             xmlns:properties="clr-namespace:FlightInspectionDesktopApp.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <local:AileronValueToJoystickConverter x:Key="AileronValueToJoystickConverter"/>
        <local:ElevatorValueToJoystickConverter x:Key="ElevatorValueToJoystickConverter"/>
    </UserControl.Resources>
    <Canvas HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="400">
        <Ellipse x:Name="JoystickBoundries" Height="{Binding Source={x:Static properties:Settings.Default}, Path=bigCircle}" Width="{Binding Source={x:Static properties:Settings.Default}, Path=bigCircle}" Stroke="Black" Margin="100,0,0,0">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF786A6A"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="Joystick" Height="{Binding Source={x:Static properties:Settings.Default}, Path=smallCircle}" Width="{Binding Source={x:Static properties:Settings.Default}, Path=smallCircle}" Canvas.Left="{Binding VMAileron, Mode=OneWay, Converter={StaticResource AileronValueToJoystickConverter}}" Canvas.Top="{Binding VMElevator, Mode=OneWay, Converter={StaticResource ElevatorValueToJoystickConverter}}" Margin="100,0,0,0">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF706969" Offset="0.45"/>
                    <GradientStop Color="Black" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Slider x:Name="rudderSlider" Canvas.Left="100" Canvas.Top="255" Width="250" Height="40" Background="#FF6696F9" BorderBrush="Black" BorderThickness="2" TickPlacement="Both" Minimum="-1" Maximum="1" TickFrequency="0.2" Value="{Binding VMRudder, Mode=OneWay}"/>
        <Slider x:Name="throttleSlider" Orientation="Vertical" Canvas.Left="54" Width="40" Height="250" Background="#FF5C6066" BorderBrush="Black" BorderThickness="2" Maximum="1" TickFrequency="0.1" TickPlacement="Both" Value="{Binding VMThrottle, Mode=OneWay}"/>
    </Canvas>
</UserControl>
