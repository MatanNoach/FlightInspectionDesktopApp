<UserControl x:Class="FlightInspectionDesktopApp.UserControls.Steering"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightInspectionDesktopApp.UserControls" xmlns:steering="clr-namespace:FlightInspectionDesktopApp.Steering" d:DataContext="{d:DesignInstance Type=steering:SteeringViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel TextElement.FontSize="20" Orientation="Vertical" VerticalAlignment="Center" >
            <TextBlock Text="Steering:" Background="AliceBlue" HorizontalAlignment="Center" Padding="0,0,0,25"/>
            <Border BorderBrush="Red" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="AliceBlue">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Name="Aileron" BorderThickness="0" Text="Aileron" Foreground="Red" Background="AliceBlue" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0"/>
                    <TextBox Name="dataAileron" BorderThickness="0" Text="{Binding VMAileron, Mode=OneWay}" Foreground="Black" Background="AliceBlue" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1"/>

                    <TextBox Name="Elevator" BorderThickness="0" Text="Elevator" Foreground="Red" Background="AliceBlue" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0"/>
                    <TextBox Name="dataElevator" BorderThickness="0" Text="{Binding VMElevator, Mode=OneWay}" Foreground="Black" Background="AliceBlue" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1"/>

                    <TextBox Name="Rudder" BorderThickness="0" Text="Rudder" Foreground="Red" Background="AliceBlue" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0"/>
                    <TextBox Name="dataRudder" BorderThickness="0" Text="{Binding VMRudder, Mode=OneWay}" Foreground="Black" Background="AliceBlue" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"/>

                    <TextBox Name="Throttle" BorderThickness="0" Text="Throttle" Foreground="Red" Background="AliceBlue" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="0"/>
                    <TextBox Name="dataThrottle" BorderThickness="0" Text="{Binding VMThrottle, Mode=OneWay}" Foreground="Black" Background="AliceBlue" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1"/>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
