<UserControl x:Class="FlightInspectionDesktopApp.UserControls.Steering"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightInspectionDesktopApp.UserControls" xmlns:steering="clr-namespace:FlightInspectionDesktopApp.Steering" d:DataContext="{d:DesignInstance Type=steering:SteeringViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:ActualValueToJoystickConverter x:Key="ActualValueToJoystickConverter"/>
        <!--<local:ElevatorValueToJoystickConverter x:Key="ElevatorValueToJoystickConverter"/>-->
    </UserControl.Resources>
    <Canvas HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="800">
        <Ellipse x:Name="JoystickBoundries" Height="250" Width="250" Stroke="Black" Margin="100,0,0,0">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF786A6A"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="Joystick" Height="100" Width="100" Canvas.Left="{Binding VMAileron, Mode=OneWay, Converter={StaticResource ActualValueToJoystickConverter}, ConverterParameter={x:Reference Name=JoystickBoundries}}" Canvas.Top="{Binding VMElevator, Mode=OneWay, Converter={StaticResource ActualValueToJoystickConverter}, ConverterParameter={x:Reference Name=JoystickBoundries}}" Margin="100,0,0,0">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF706969" Offset="0.45"/>
                    <GradientStop Color="Black" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Slider x:Name="rudderSlider" Canvas.Left="100" Canvas.Top="255" Width="250" Height="40" Background="#FF6696F9" BorderBrush="Black" BorderThickness="2" TickPlacement="Both" Maximum="1" TickFrequency="0.1" Value="{Binding VMRudder, Mode=OneWay}"/>
        <Slider x:Name="throttleSlider" Orientation="Vertical" Canvas.Left="54" Width="40" Height="250" Background="#FF5C6066" BorderBrush="Black" BorderThickness="2" Maximum="1" TickFrequency="0.1" TickPlacement="Both" Value="{Binding VMThrottle, Mode=OneWay}"/>
