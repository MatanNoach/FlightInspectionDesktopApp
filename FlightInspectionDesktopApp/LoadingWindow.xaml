<Window x:Class="FlightInspectionDesktopApp.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightInspectionDesktopApp"
        mc:Ignorable="d"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        Title="Loading..."
        Height="450"
        Width="800"         
        FontFamily="Microsoft JhengHei UI"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Image x:Name="loadingImg" gif:AnimationBehavior.SourceUri="Resources/loading.gif" gif:AnimationBehavior.RepeatBehavior="2000x" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform"/>
    </Grid>
</Window>
