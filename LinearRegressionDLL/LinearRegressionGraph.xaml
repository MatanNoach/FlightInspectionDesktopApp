<UserControl x:Class="LinearRegressionDLL.LinearRegressionGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LinearRegressionDLL" d:DataContext="{d:DesignInstance Type=local:LinearGraphViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:LinePointsConverter x:Key="LinePointsConverter"/>
        <local:ColorConverter x:Key="ColorConverter"/>
        <local:ThicknessConverter x:Key="ThicknessConverter"/>
    </UserControl.Resources>
    <Grid>
        <Canvas>
            <Canvas Name="LinearGraph" Background="White" Width="200" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Path Data="{Binding VMCorrelatedPoints, Converter={StaticResource LinePointsConverter}, Mode=OneWay}"
            Stroke="{Binding VMCorrelatedPoints, Converter={StaticResource ColorConverter}, Mode=OneWay}" StrokeThickness="{Binding VMCorrelatedPoints, Converter={StaticResource ThicknessConverter}, Mode=OneWay}"
            StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
        </Canvas>
    </Grid>
</UserControl>
